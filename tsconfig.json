{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "baseUrl": ".",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "index.tsx",
    "App.tsx",
    "types.ts",
    "components/**/*.tsx",
    "domain/**/*.ts",
    "hooks/**/*.ts",
    "services/**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "vite.config.ts"
  ]
}
